{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pearl.local/schemas/workflow/job-status.schema.json",
  "title": "JobStatus",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "$ref": "../common/common-defs.schema.json#/$defs/schema_version"
    },
    "job_id": {
      "type": "string",
      "pattern": "^job_[A-Za-z0-9_-]+$"
    },
    "status": {
      "type": "string",
      "enum": [
        "queued",
        "running",
        "succeeded",
        "failed",
        "partial"
      ]
    },
    "job_type": {
      "type": "string",
      "enum": [
        "compile_context",
        "planning_bundle",
        "normalize_findings",
        "generate_remediation_spec",
        "report"
      ]
    },
    "project_id": {
      "type": "string"
    },
    "created_at": {
      "$ref": "../common/common-defs.schema.json#/$defs/timestamp"
    },
    "updated_at": {
      "$ref": "../common/common-defs.schema.json#/$defs/timestamp"
    },
    "trace_id": {
      "$ref": "../common/common-defs.schema.json#/$defs/trace_id"
    },
    "result_refs": {
      "type": "array",
      "items": {
        "$ref": "../common/common-defs.schema.json#/$defs/reference"
      }
    },
    "errors": {
      "type": "array",
      "items": {
        "$ref": "../common/common-defs.schema.json#/$defs/error"
      }
    }
  },
  "required": [
    "schema_version",
    "job_id",
    "status",
    "job_type",
    "created_at",
    "updated_at",
    "trace_id"
  ]
}
