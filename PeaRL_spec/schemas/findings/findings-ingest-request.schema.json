{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pearl.local/schemas/findings/findings-ingest-request.schema.json",
  "title": "FindingsIngestRequest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "$ref": "../common/common-defs.schema.json#/$defs/schema_version"
    },
    "source_batch": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "batch_id": {
          "type": "string"
        },
        "source_system": {
          "type": "string"
        },
        "connector_version": {
          "type": "string"
        },
        "received_at": {
          "$ref": "../common/common-defs.schema.json#/$defs/timestamp"
        },
        "trust_label": {
          "$ref": "../common/common-defs.schema.json#/$defs/trust_label"
        }
      },
      "required": [
        "batch_id",
        "source_system",
        "received_at",
        "trust_label"
      ]
    },
    "findings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "finding.schema.json"
      }
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "normalize_on_ingest": {
          "type": "boolean",
          "default": false
        },
        "strict_validation": {
          "type": "boolean",
          "default": true
        },
        "quarantine_on_error": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "required": [
    "schema_version",
    "source_batch",
    "findings"
  ]
}
