{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pearl.local/schemas/project/project.schema.json",
  "title": "Project",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "$ref": "../common/common-defs.schema.json#/$defs/schema_version"
    },
    "project_id": {
      "type": "string",
      "pattern": "^proj_[A-Za-z0-9_-]+$"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "maxLength": 5000
    },
    "owner_team": {
      "type": "string",
      "minLength": 1
    },
    "business_criticality": {
      "type": "string",
      "enum": [
        "low",
        "moderate",
        "high",
        "mission_critical"
      ]
    },
    "external_exposure": {
      "type": "string",
      "enum": [
        "internal_only",
        "partner",
        "customer_facing",
        "public"
      ]
    },
    "ai_enabled": {
      "type": "boolean"
    },
    "created_at": {
      "$ref": "../common/common-defs.schema.json#/$defs/timestamp"
    },
    "updated_at": {
      "$ref": "../common/common-defs.schema.json#/$defs/timestamp"
    },
    "traceability": {
      "$ref": "../common/common-defs.schema.json#/$defs/traceability_ref"
    }
  },
  "required": [
    "schema_version",
    "project_id",
    "name",
    "owner_team",
    "business_criticality",
    "external_exposure",
    "ai_enabled"
  ]
}
