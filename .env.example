# Database
DATABASE_URL=postgresql+asyncpg://pearl:pearl@localhost:5432/pearl

# Redis
REDIS_URL=redis://localhost:6379/0

# S3 / MinIO
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=pearl-artifacts

# JWT
JWT_SECRET=dev-secret-change-in-production
JWT_ALGORITHM=HS256
JWT_ISSUER=pearl-api
JWT_AUDIENCE=pearl

# Server
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=info

# CORS — comma-separated list of allowed origins
PEARL_CORS_ALLOWED_ORIGINS=https://your-domain.com

# JWT — use RS256 in production
PEARL_JWT_ALGORITHM=RS256
PEARL_JWT_PRIVATE_KEY_PATH=/run/secrets/jwt_private.pem
PEARL_JWT_PUBLIC_KEY_PATH=/run/secrets/jwt_public.pem

# OIDC (optional)
# PEARL_OIDC_DISCOVERY_URL=https://login.microsoftonline.com/{tenant}/v2.0/.well-known/openid-configuration
# PEARL_OIDC_CLIENT_ID=your-client-id

# PEARL_LOCAL_REVIEWER=1
